<configuration>
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeContext>true</includeContext>
        </encoder>
    </appender>

    <appender name="CONSOLE_PRETTY" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] [%X{traceId},%X{spanId}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <springProfile name="prod">
        <root level="INFO"><appender-ref ref="CONSOLE_JSON"/></root>
    </springProfile>
    <springProfile name="!prod">
        <root level="INFO"><appender-ref ref="CONSOLE_PRETTY"/></root>
    </springProfile>
</configuration>